<div class="row mt-3">
    <div class="col-12 mb-4">
        <h1 class="text-center">Tricks</h1>
    </div>
    {% for trick in tricks %}
        <div class="col-lg-3 col-sm-12 col-md-4 my-3 tricks-more ">
            <div class="w-100 mx-auto p-2 row border border-lightgrey">
                <div class="col-12 p-0" >
                    <div>
                        {% for image in trick.images %}
                        <img class="h-100 w-100"  src="{{ asset('assets/uploads/' ~ image.name) }}" alt="{{ trick.name }}">{% endfor %}
                    </div>
                    <div class="d-flex col-12 p-3  name-trick">
                    <div>{{ trick.name }}</div>
                    </div>
               </div> 
            </div>
        </div>
    {% endfor %}
    <div class="scroll-to-up position-absolute ">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#tricks-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
    <div class="col-12 d-flex">
        <button class="btn btn-secondary mx-auto" id="loadMore">Load More</button>
    </div>
    {% block javascripts %}
    <script src="{{ asset('assets/js/pics.js') }}"></script>
    <script src="{{ asset('assets/js/loadMoreTricks.js') }}"></script>
    {% endblock %}
</div>  
