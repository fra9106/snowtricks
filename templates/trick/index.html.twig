{% extends 'base.html.twig' %}

{% block body %}
{% for message in app.flashes('message') %}
<div class="alert alert-success text-center" role="alert">
    {{ message }}
</div>
{% endfor %}
<div class="container mt-4 text-center"><br>
    <h1>Trick index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>author</th>
                <th>Creation date</th>
                <th>Update date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trick in tricks %}
            <tr>

                <td>{{ trick.name }}</td>
                <td>{{ trick.category.category }}</td>
                <td>{{ trick.description }}</td>
                <td>{{ trick.user.pseudo }}</td>
                <td>{{ trick.creationDate ? trick.creationDate|date('d/m/Y') : '' }}</td>
                <td>{{ trick.updateDate ? trick.updateDate|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('trick_show', {'id': trick.id}) }}">show</a>
                    {% if is_granted('edit', trick) %}
                    <a href="{{ path('trick_edit', {'id': trick.id}) }}"><i class="fas fa-pen"></i></a>
                    {{ include('trick/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('trick_new') }}">Create new</a>
</div>
{% endblock %}
