{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block body %}
<div class="container mt-4 text-center"><br>
    <h1>Trick index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>author</th>
                <th>Creation_date</th>
                <th>Update_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trick in tricks %}
            <tr>
                <td>{{ trick.id }}</td>
                <td>{{ trick.name }}</td>
                <td>{{ trick.category.category }}</td>
                <td>{{ trick.description }}</td>
                <td>{{ trick.user.pseudo }}</td>
                <td>{{ trick.creationDate ? trick.creationDate|date('d/m/Y') : '' }}</td>
                <td>{{ trick.updateDate ? trick.updateDate|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('trick_show', {'id': trick.id}) }}">show</a>
                    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('trick_new') }}">Create new</a>
</div>
{% endblock %}
